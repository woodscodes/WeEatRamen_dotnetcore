@using WeEatRamen.Core.Models
@model Shop
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>@Model.Name</h3>
    </div>
    <div class="panel-body">
        <p>Location: @Model.Location</p>
        <p>Soup base: @Model.Soup</p>
        <p>Rating: @Model.Rating</p>
        <p>Description: @Model.Description</p>
    </div>
    <div class="panel-footer">
        <a class="btn" asp-page="./Detail" asp-route-shopId="@Model.Id">
            <i class="glyphicon glyphicon-zoom-in"></i>
        </a>
        <a class="btn" asp-page="./Edit" asp-route-shopId="@Model.Id">
            <i class="glyphicon glyphicon-edit"></i>
        </a>
        <a class="btn" asp-page="./Delete" asp-route-shopId="@Model.Id">
            <i class="glyphicon glyphicon-trash"></i>
        </a>
    </div>
</div>

<div class="card-body">
    <h5>@Model.Soup soup base</h5>
    <p><i class="glyphicon glyphicon-map-marker"></i> @Model.Location</p>
    <p><i class="glyphicon glyphicon-star-empty"></i> @Model.Rating of 5</p>
    <p>About this shop</p>
    <p>@Model.Description</p>
</div>
